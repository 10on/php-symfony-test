{% extends 'base.html.twig' %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h1>Step {{ step }} of {{ totalSteps }}</h1>
        </div>
        <div class="card-body">
            <h2>{{ question.text }}</h2>

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.answer, null, {'label_attr': {'class': 'form-label'}}) }}
                <div class="form-check">
                    {% for choice in form.answer %}
                        <div class="form-check">
                            {{ form_widget(choice, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(choice, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_errors(form.answer) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.next, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}